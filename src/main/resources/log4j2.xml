<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 콘솔 출력 설정 -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level: %msg%n%throwable"/>
        </Console>
    </Appenders>

    <!-- 로그 레벨 및 출력 설정 -->
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
